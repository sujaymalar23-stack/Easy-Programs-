#include <stdio.h>

int main() {
    char op;
    float num1, num2, result;

    // Input operator
    printf("Enter an operator (+, -, *, /): ");
    scanf("%c", &op);

    // Input numbers
    printf("Enter two numbers: ");
    scanf("%f %f", &num1, &num2);

    // Switch-case operations
    switch (op) {
        case '+':
            result = num1 + num2;
            printf("Result = %.2f\n", result);
            break;

        case '-':
            result = num1 - num2;
            printf("Result = %.2f\n", result);
            break;

        case '*':
            result = num1 * num2;
            printf("Result = %.2f\n", result);
            break;

        case '/':
            if (num2 == 0)
                printf("Error! Division by zero.\n");
            else {
                result = num1 / num2;
                printf("Result = %.2f\n", result);
            }
            break;

        default:
            printf("Invalid operator!\n");
    }

    return 0;
}
